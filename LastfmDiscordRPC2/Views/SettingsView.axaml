<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LastfmDiscordRPC2.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LastfmDiscordRPC2.Views.Settings">
    <Design.DataContext>
        <vm:SettingsViewModel/>
    </Design.DataContext>
    
    <StackPanel>
        <TextBlock Text="{Binding OS}" />
        <ToggleSwitch
            Content="Launch on Startup"
            IsVisible="{Binding StartUpVisible}"
            IsChecked="{Binding StartUpChecked}"
            Command="{Binding LaunchOnStartup}"
            CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=IsChecked}" />
    </StackPanel>
</UserControl>