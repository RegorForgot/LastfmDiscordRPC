<UserControl
    x:Class="LastfmDiscordRPC2.Views.Panes.SettingsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:LastfmDiscordRPC2.Views.Controls"
    xmlns:converters="clr-namespace:LastfmDiscordRPC2.Converters"
    xmlns:panes="clr-namespace:LastfmDiscordRPC2.ViewModels.Panes"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <converters:LoginTextConverter x:Key="LoginTextConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <panes:SettingsViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto">
        <StackPanel Grid.Row="0">
            <ToggleSwitch
                Command="{Binding LaunchOnStartupCmd}"
                CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=IsChecked}"
                Content="Launch on Startup"
                IsChecked="{Binding IsStartUpChecked}"
                IsVisible="{Binding StartUpVisible}" />

            <StackPanel Orientation="Horizontal">
                <Button
                    Command="{Binding LastfmLoginCmd}"
                    CommandParameter="{Binding !Context.IsLoggedIn}"
                    Content="{Binding !Context.IsLoggedIn, Converter={StaticResource LoginTextConverter}}"
                    IsEnabled="{Binding CanLogOut}"
                    Margin="0,10,10,10" />
                <Label Content="{Binding LoginMessage}" Margin="0,10,0,10" />
            </StackPanel>

            <StackPanel Height="50" Orientation="Horizontal">
                <TextBox
                    AcceptsReturn="False"
                    Focusable="{Binding !Context.HasRichPresenceActivated}"
                    Height="30"
                    IsReadOnly="{Binding Context.HasRichPresenceActivated}"
                    MaxLength="21"
                    Text="{Binding AppID}"
                    VerticalContentAlignment="Center"
                    Watermark="Discord ID"
                    Width="400" />
                <Button
                    Command="{Binding SaveAppIDCmd}"
                    Content="Save"
                    IsEnabled="{Binding CanSaveAppID}"
                    Margin="0,10,10,10" />
                <Button
                    Command="{Binding ResetAppIDCmd}"
                    Content="Reset"
                    IsEnabled="{Binding CanReset}"
                    Margin="0,10,10,10" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TimePicker
                    ClockIdentifier="24HourClock"
                    IsEnabled="{Binding !Context.IsRichPresenceActivated}"
                    SelectedTime="{Binding PresenceExpiryTime, Mode=TwoWay}" />
                <Button
                    Command="{Binding SaveExpiryTimeCmd}"
                    Content="Save"
                    IsEnabled="{Binding CanSaveExpiryTime}"
                    Margin="0,10,10,10" />
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <controls:PreviewSettingControlView DataContext="{Binding PreviewSettingControlViewModel}" Margin="0" />
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            Orientation="Vertical">
            <Label
                Content="⚠ Please enter a valid Discord App ID."
                Foreground="Yellow"
                HorizontalAlignment="Center"
                IsVisible="{Binding !IsAppIDError}" />
            <Label
                Content="⚠ Please enter a valid presence expiry time."
                Foreground="Yellow"
                HorizontalAlignment="Center"
                IsVisible="{Binding !IsExpiryTimeError}" />
            <ProgressBar
                IsIndeterminate="True"
                IsVisible="{Binding IsLoginInProgress}"
                Width="40" />
        </StackPanel>
    </Grid>
</UserControl>