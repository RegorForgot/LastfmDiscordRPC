<UserControl
    x:Class="LastfmDiscordRPC2.Views.Panes.PresenceConfigView"
    xmlns="https://github.com/avaloniaui"
    xmlns:controls="clr-namespace:LastfmDiscordRPC2.Views.Controls"
    xmlns:panes="clr-namespace:LastfmDiscordRPC2.ViewModels.Panes"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <panes:PresenceConfigViewModel />
    </Design.DataContext>

    <Grid RowDefinitions="Auto,Auto, *">
        <StackPanel>
            <Label Classes="Heading" Content="Presence" />
            <Label Classes="Text" />
        </StackPanel>
        <controls:PreviewConfigControlView
            DataContext="{Binding PreviewConfigControlViewModel}"
            Grid.Row="1"
            IsEnabled="{Binding !Context.IsRichPresenceActivated}" />
        <Label
            Classes="Error"
            Content="âš  Please enter a valid button link."
            Grid.Row="2"
            IsVisible="{Binding !PreviewConfigControlViewModel.CanSave}" />
    </Grid>
</UserControl>