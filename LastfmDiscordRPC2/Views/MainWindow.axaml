<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LastfmDiscordRPC2.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="LastfmDiscordRPC2.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="LastfmDiscordRPC2"
        TransparencyLevelHint="Blur"
        ExtendClientAreaToDecorationsHint="True"
        Background="#A0000000">

  <Window.Styles>
    <Style Selector="Button:pointerover /template/ ContentPresenter">
      <Setter Property="TextBlock.Background" Value="Red" />
    </Style>
    <Style Selector="Button:pressed /template/ ContentPresenter">
      <Setter Property="TextBlock.Background" Value="Maroon" />
    </Style>
  </Window.Styles>

  <Design.DataContext>
    <vm:MainWindowViewModel />
  </Design.DataContext>

  <StackPanel Margin="20 50 20 0">
    <TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center" />
    <ComboBox SelectedIndex="0">
      <ComboBoxItem>1</ComboBoxItem>
      <ComboBoxItem>2</ComboBoxItem>
    </ComboBox>
    <TextBox />
    <Button Content="Stuff" />
  </StackPanel>
</Window>