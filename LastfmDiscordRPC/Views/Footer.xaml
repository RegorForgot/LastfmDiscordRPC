<UserControl x:Class="LastfmDiscordRPC.Views.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Height="50"
             Style="{StaticResource BackgroundStyle}">

    <Border BorderThickness="0, 2, 0, 0"
            BorderBrush="#1f292e">
        <Label HorizontalAlignment="Right"
               Margin="0">
            <Hyperlink Name="SourceLink"
                       TextDecorations=""
                       NavigateUri="https://github.com/RegorForgotTheirPassword/LastfmDiscordRPC"
                       RequestNavigate="SourceLink_OnRequestNavigate">
                <Image Source="/Resources/githubLogo.png"
                       Stretch="Uniform" />
                <Label Content="Github Source"
                       Style="{StaticResource GeneralStyle}"
                       Margin="0"/>
            </Hyperlink>
        </Label>
    </Border>

</UserControl>